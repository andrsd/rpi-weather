        bold: True


    Label:
        font_size: sp(15)
        pos: sp(margin), sp(5)
        size: sp(width-2*margin), sp(15)
        text: "Powered by [ref=https://darksky.net/poweredby/]Dark Sky[/ref]"
        text_size: self.size
        halign: 'right'
        valign: 'bottom'
        markup: True
